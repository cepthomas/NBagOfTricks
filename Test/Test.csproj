<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net5.0-windows;net472</TargetFrameworks>
        <OutputType>WinExe</OutputType>
        <UseWindowsForms>true</UseWindowsForms>
        <Version>2.0.0</Version>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <Description>NBagOfTricks tester</Description>
        <Copyright>MIT License</Copyright>
        <RootNamespace>NBagOfTricks.Test</RootNamespace>
        <AssemblyName>NBagOfTricks.Test</AssemblyName>
        <OutputPath>bin\</OutputPath>
        <!-- <DefineConstants>DEBUG;TRACE</DefineConstants> -->
        <WarningLevel>4</WarningLevel>
        <NoWarn>CS1591</NoWarn>
        <GenerateDocumentationFile>false</GenerateDocumentationFile>
        <!-- <Nullable>enable</Nullable> -->
        <SatelliteResourceLanguages>none</SatelliteResourceLanguages>
        <!-- en none -->
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="System.Drawing.Common" Version="6.0.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Source\Source.csproj" />
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' != 'net5.0-windows' ">
        <Compile Remove="../Source/Core/JsonConverters.cs" />
        <Compile Remove="Test_NET5.cs" />
    </ItemGroup>

    <ItemGroup>
        <None Update="Files\scooter.gif">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Update="Files\small.md">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <PropertyGroup Condition=" '$(TargetFramework)' == 'net5.0-windows' ">
        <NoWarn>CS1591,CA1837,IDE0063,IDE0090</NoWarn>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(TargetFramework)' == 'net472' ">
        <NoWarn>CS1591</NoWarn>
    </PropertyGroup>

</Project>
